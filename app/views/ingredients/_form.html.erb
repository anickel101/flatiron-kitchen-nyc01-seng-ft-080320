<h3>Form for Ingredient</h3>

<% if flash[:my_errors] %>
    <strong>You have some errors that prevented the server from adding the ingredient:</strong>
    <ul><% flash[:my_errors].each do |msg| %>
       <li><%= msg %></li> 
    <% end %>
    </ul>
<% end %>


<%= form_for @ingredient do |f| %>
<p>
<%= f.label :name %>
<%= f.text_field :name %>
</p>

<%= f.submit %>
<% end%>